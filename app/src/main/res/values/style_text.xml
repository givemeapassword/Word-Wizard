<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextHeader" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/serif_display_italic</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BottomTextElement">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/robotomono_regular</item>
    </style>

    <style name="CardText_Main" >
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/robotomono_regular</item>
        <item name="android:text">@string/main_button</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="CardText_Second" >
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/robotomono_italic</item>
        <item name="android:text">@string/time</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DrawerHeader_text" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/robotomono_mediumitalic</item>
        <item name="android:textColor">@color/text</item>
    </style>
    <style name="DrawerHeader_text_email" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/robotomono_italic</item>
    </style>

    <style name="Text_Shadow">
        <item name="android:shadowColor">#3E3E3E</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="DrawerHeader_text_item">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/robotomono_italic</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>